<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mvc</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <br/>
    <br/>
    <br/>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dosya", "Index", "Files", new { mail = @HttpContext.Current.User.Identity.Name }, new { @class = "mt-3" })</li>
                    <li>@Html.ActionLink("Api", "getFiles", "Files")</li>
                    <li>@Html.ActionLink("Account", "Index", "Account", new { mail = @HttpContext.Current.User.Identity.Name }, new { @class = "mt-3" })</li>

                    <li>@Html.ActionLink("LogOut", "LogOut", "Login")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content " style="margin-top:20px">
        @RenderBody()
    </div>
</body>
</html>
