@model IEnumerable<DriveFileMVC.Models.Tbl_Files>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.msj</h2>

<p style="font-size:26px">
    @Html.ActionLink("Insert file", "Create", new { mail = @HttpContext.Current.User.Identity.Name })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegDate)
        </th>
        <th>Download</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.RegDate)
            </td>
            <td>
                @Html.ActionLink("Download", "DownloadFile", new { fileName = item.FileName })

            </td>
            <td>  @Html.ActionLink("Delete", "Delete", new { id = item.id })</td>
        </tr>
    }

</table>
